@model NPGeek.Web.Models.Park

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="park-detail">



    <div class="descriptionWrapper">
        <img class="parkPic" src="~/Content/parks/@(Model.ParkCode).jpg" />
        <div class="detail-header">
            <div class="park-title">
                <h2 class="park-name">@Model.Name</h2>
                <span class="park-state">(@Model.State)</span>
            </div>
            <span class="year">Founded in @Model.YearFounded</span>
            <div class="park-description">
                @Model.ParkDescription
            </div>

            <div class="park-stats">
                <span>Acreage: @Model.Acreage miles</span>
                <span>Elevation: @Model.Elevation ft</span>
                <span>Miles of Trail: @Model.MilesOfTrail miles</span>
                <span>No. of Campsites: @Model.NumberOfCampsites</span>
                <span>Climate: @Model.Climate</span>
                <span>Annual Visitor Count: @Model.AnnualVisitorCount</span>
                <span>Number of Animal Species: @Model.AnimalSpecies</span>
                <span>Entry Fee: $@Model.EntryFee</span>
            </div>
        </div>

    </div>






    @Html.Action("Index", "Weather")





</div>

